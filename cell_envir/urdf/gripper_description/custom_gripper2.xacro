  <xacro:macro name="finger" params="name x_pos size_x size_y size_z">
    <link name="${name}">
      <visual>
        <geometry>
          <box size="${size_x} ${size_y} ${size_z}"/>
        </geometry>
        <origin rpy="0 0 0" xyz="${x_pos} 0 0"/>
        <material name="grey">
          <color rgba="0.5 0.5 0.5 1"/>
        </material>
      </visual>
      <collision name="${name}_collision">
        <geometry>
          <box size="${size_x} ${size_y} ${size_z}"/>
        </geometry>
        <origin rpy="0 0 0" xyz="${x_pos} 0 0"/>
      </collision>
      <inertial>
          <xacro:box_inertia m="0.1" x="0.1" y="0.02" z="0.02"/>
      </inertial>
    </link>
  </xacro:macro>

  

  <!-- Define the joints -->
  <xacro:macro name="prismatic_joint" params="name parent child x_pos y_pos rotation lower_lim upper_lim mimic_joint:=false mimic_joint_name:=none mimic_multiplier:=1 mimic_offset:=0">
  <joint name="${name}" type="prismatic">
    <parent link="${parent}"/>
    <child link="${child}"/>
    <origin rpy="0 0 ${rotation}" xyz="${x_pos} ${y_pos} 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="${lower_lim}" upper="${upper_lim}" effort="100" velocity="0.1"/>
    <xacro:if value="${mimic_joint}">
      <mimic joint="${mimic_joint_name}" multiplier="${mimic_multiplier}" offset="${mimic_offset}"/>
    </xacro:if>
  </joint>
</xacro:macro>

